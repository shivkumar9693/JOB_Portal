<% layout('layouts/main') %>

<div class="container mt-5">
    <h1 class="text-center">Job Listings</h1>
    <div class="row mt-4">
        <% jobs.forEach(job => { %>
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= job.title %></h5>
                        <p class="card-text"><strong>Company:</strong> <%= job.company %></p>
                        <p class="card-text"><strong>Role:</strong> <%= job.role %></p>
                        <a href="/user/jobs/<%= job._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>