<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container">
    <h2>Available Jobs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Company</th>
                <th>Location</th>
                <th>Required CGPA</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% jobs.forEach(job => { %>
            <tr>
                <td><%= job.title %></td>
                <td><%= job.company %></td>
                <td><%= job.location %></td>
                <td><%= job.cgpa %></td>
                <td>
                    <button class="btn btn-info apply-btn" data-bs-toggle="modal" data-bs-target="#applyModal" 
                        data-job-id="<%= job._id %>" 
                        data-job-title="<%= job.title %>" 
                        data-job-company="<%= job.company %>" 
                        data-job-location="<%= job.location %>" 
                        data-job-cgpa="<%= job.cgpa %>">
                        Apply
                    </button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Modal for Job Application -->
<div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="applyModalLabel">Apply for Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Company:</strong> <span id="jobCompany"></span></p>
                <p><strong>Location:</strong> <span id="jobLocation"></span></p>
                <p><strong>Required CGPA:</strong> <span id="jobCgpa"></span></p>

                <form id="applyForm" method="POST">
                    <% if (!user.cgpa) { %>
                        <p style="color: red;">Please update your profile with your CGPA before applying.</p>
                    <% } else { %>
                        <button type="submit" class="btn btn-success">Submit Application</button>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const applyButtons = document.querySelectorAll(".apply-btn");
        applyButtons.forEach(button => {
            button.addEventListener("click", function () {
                document.getElementById("jobCompany").textContent = this.dataset.jobCompany;
                document.getElementById("jobLocation").textContent = this.dataset.jobLocation;
                document.getElementById("jobCgpa").textContent = this.dataset.jobCgpa;
                document.getElementById("applyForm").action = `/jobs/${this.dataset.jobId}/apply`;
            });
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
